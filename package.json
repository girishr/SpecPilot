{
  "name": "specpilot",
  "version": "1.3.0",
  "description": "A CLI tool for initializing specification-driven development projects with flexible, production-ready structures.",
  "main": "dist/index.js",
  "bin": {
    "specpilot": "cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "echo 'Add linting here'",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run build"
  },
  "keywords": [
    "cli",
    "specification-driven-development",
    "project-initialization",
    "templates",
    "development-tools"
  ],
  "author": {
    "name": "SpecPilot SDD CLI Contributors",
    "email": "contact@specpilot.dev"
  },
  "license": "MIT",
  "homepage": "https://github.com/girishr/SpecPilot#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/girishr/SpecPilot.git"
  },
  "bugs": {
    "url": "https://github.com/girishr/SpecPilot/issues"
  },
  "type": "commonjs",
  "files": [
    "dist/**/*",
    "cli.js",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "fs-extra": "^11.3.2",
    "handlebars": "^4.7.8",
    "inquirer": "^12.9.6",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.5.2",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
